// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Existing Dockerfile",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		// Using standard Dockerfile name
		"dockerfile": "../Dockerfile"
	},
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}/.config/fish,target=/root/.config/fish,type=bind,readonly",
    "source=${localEnv:HOME}/.config/gh,target=/root/.local/config/gh,type=bind,readonly",
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,readonly",
    "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind,readonly",
		"source=${localEnv:HOME}/.cursor,target=/root/.cursor,type=bind"
  ],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8080],

	// Override the CMD from Dockerfile for development (keeps container alive)
	"overrideCommand": true,

	// Run development setup script after container is created
	"postCreateCommand": "bash .devcontainer/setup-dev.sh",

	// Set environment variables for fish to use writable location for universal variables
	"containerEnv": {
		"XDG_CONFIG_HOME": "/root/.local/config"
	},
	
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "fish"
			}
		}
	}

	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer"
}
